{% assign comps = site.data.mkchessclub[ "competitions" ] %}

{% comment %}
   Figure out the current season for the page. If no
   explicit season defined - take the latest season.
{% endcomment %}
{% assign seasonIsActive = false %}
{% if page.season %}
  {% assign season = page.season %}
{% else %}
  {% assign season = comps.bcl[0].season %}
{% endif %}
{% for s in comps.bcl %}
	{% if s.season == season %}
  		{% assign seasonIsActive = s.active %}
  		{% break %}
	{% endif %}
{% endfor %}

{% if page.leaguename %}
  {% assign leaguename = page.leaguename %}
{% else %}
  {% assign leaguename = page.title %}
{% endif %}

{% assign season = season | append: "" %}



{% assign leaguetable = site.data.results.bcl[ season ].table[ page.division ] %}
{% assign fixtures = site.data.results.bcl[ season ].fixtures[ page.division ] %}
{% assign matches = site.data.results.bcl[ season ].matches[ page.division ] %}

